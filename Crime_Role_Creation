USE ROLE ACCOUNTADMIN;

CREATE ROLE IF NOT EXISTS CRIME_ROLE;

CREATE WAREHOUSE IF NOT EXISTS CRIME_WH WITH warehouse_size = 'x-small';

GRANT USAGE ON WAREHOUSE CRIME_WH TO ROLE CRIME_ROLE;
GRANT ROLE CRIME_ROLE TO USER nann434511905;

CREATE DATABASE IF NOT EXISTS MY_CRIME_STAT;
GRANT ALL ON DATABASE MY_CRIME_STAT TO ROLE CRIME_ROLE;

CREATE SCHEMA MY_CRIME_STAT.CRIME_SCHEMA;

GRANT ALL ON SCHEMA MY_CRIME_STAT.PUBLIC TO ROLE CRIME_ROLE;
